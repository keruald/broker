{
  "exclude": [
    "(^vendor/)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "php": {
      "type": "php",
      "include": "(\\.php$)"
    },
    "phpcs": {
      "type": "phpcs",
      "bin": "vendor/bin/phpcs",
      "phpcs.standard": "PSR1",
      "include": "(\\.php$)"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "severity" : {
        "5" : "disabled"
      }
    },
    "xml": {
      "type": "xml",
      "include": "(\\.xml$)"
    }
  }
}
